{
    "name": "yonlj/tiny",
    "type": "library",
    "description": "Tiny is a Virtual DOM based templating-engine for PHP inspired by ReactJS.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tiny\\": "src/",
            "Tiny\\Core\\": "src/core",
            "Tiny\\Utils\\": "src/utils",
            "Tiny\\Tags\\": "src/tags"
        },
        "files": [
            "src/tags/html.php",
            "src/tags/svg.php",
            "src/utils/clx.php",
            "src/utils/sty.php",
            "src/core/Raw.php"
        ]
    },
    "authors": [
        {
            "name": "YonLJ",
            "email": "istintin@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10"
    },
    "keywords": [
        "php",
        "templating-engine",
        "template",
        "render",
        "virtual-dom",
        "vdom",
        "html5",
        "xml"
    ],
    "archive": {
        "exclude": [
            "tests/",
            "examples/"
        ]
    }
}
